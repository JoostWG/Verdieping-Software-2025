{
    "semi": true,
    "singleQuote": true,
    "singleAttributePerLine": false,
    "quoteProps": "consistent",
    "htmlWhitespaceSensitivity": "css",
    "trailingComma": "all",
    "printWidth": 100,
    "plugins": [
        "prettier-plugin-organize-imports",
        "prettier-plugin-tailwindcss",
        "@prettier/plugin-php"
    ],
    "tailwindFunctions": ["clsx", "cn"],
    "tabWidth": 4,
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "**/*.php",
            "options": {
                "printWidth": 80
            }
        }
    ]
}
